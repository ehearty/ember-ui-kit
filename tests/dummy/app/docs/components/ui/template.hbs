<h1>ui-anchor</h1>
<h1>ui-backdrop</h1>
<h1>ui-draggable</h1>
<h1>ui-position</h1>
<h1>ui-resizable</h1>
<h1>ui-sortable</h1>
<h1>ui-table</h1>

{{#docs-demo as |demo|}}
  {{#demo.example name="docs-components-x-component"}}
    {{#ui-table--v2}}
      {{#ui-thead--fixed}}
        {{#ui-th width="40px" column=0 children=0}}ID{{/ui-th}}
      {{else}}
        {{#ui-sortable}}
          {{#ui-th children=2}}
            <div>Name</div>
            {{#ui-th width="15%" column=1 children=0}}First Name{{/ui-th}}
            {{#ui-th width="15%" column=2 children=0}}Last Name{{/ui-th}}
          {{/ui-th}}
          {{#ui-th width="50%" column=3 children=0}}
            {{#ui-resizable}}
              Nick Name
            {{/ui-resizable}}
          {{/ui-th}}
          {{#ui-th width="20%" column=4 children=0}}
            Age
          {{/ui-th}}
          {{#ui-th width="20%" column=5 children=0}}SSN{{/ui-th}}
          {{#ui-th width="20%" column=6 children=0}}Password{{/ui-th}}
        {{/ui-sortable}}
      {{/ui-thead--fixed}}

      {{#unless model.isPending}}
        {{#ui-tbody--fixed}}
          {{#ui-tr--each model key="id" as |item|}}
            {{#ui-td column=0}}{{item.id}}{{/ui-td}}
          {{/ui-tr--each}}
        {{else}}
          {{#ui-tr--each model key="id" as |item|}}
            {{#fm-form item as |field|}}
              {{#ui-td column=1}}
                {{item.firstName}}
              {{/ui-td}}
              {{#ui-td column=2}}
                {{item.lastName}}
              {{/ui-td}}
              {{#ui-td column=3}}
                {{#field.nickName as |in|}}
                  {{in.text}}
                {{/field.nickName}}
              {{/ui-td}}
              {{#ui-td column=4}}{{item.age}}{{/ui-td}}
              {{#ui-td column=5}}XXX-XX-XXXX{{/ui-td}}
              {{#ui-td column=6}}********{{/ui-td}}
            {{/fm-form}}
          {{/ui-tr--each}}
        {{/ui-tbody--fixed}}

        {{#ui-tfoot--fixed}}
          {{#ui-tr}}
            {{#ui-td column="0"}}ID{{/ui-td}}
          {{/ui-tr}}
        {{else}}
          {{#ui-tr}}
            {{#ui-td column=1}}First Name{{/ui-td}}
            {{#ui-td column=2}}Last Name{{/ui-td}}
            {{#ui-td column=3}}Nick Name{{/ui-td}}
            {{#ui-td column=4}}Age{{/ui-td}}
            {{#ui-td column=5}}SSN{{/ui-td}}
            {{#ui-td column=6}}Password{{/ui-td}}
          {{/ui-tr}}
        {{/ui-tfoot--fixed}}
      {{/unless}}
    {{/ui-table--v2}}
  {{/demo.example}}
{{/docs-demo}}
